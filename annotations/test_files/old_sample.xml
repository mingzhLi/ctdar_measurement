<?xml version="1.0" encoding="UTF-8"?>
<document filename="hello-world.xml">
    <table id="1">
        <!-- region separations for table that cross pages-->
        <region id="1" page="int(page_number)">
            <!--end-row and end-col attributes exits if cell is cross-row / cross-col-->
            <cell start-row="int(start-row)" start-col="int(start-col)">
                <bounding-box x1="int(x1)" y1="int(y1)" x2="int(x2)" y2="int(y2)"/>
                <content>random content</content>
            </cell>

            <cell start-row="int(start-row)" start-col="int(start-col)" end-row="int(end-row)" end-col="int(end-col)">
                <bounding-box x1="int(x1)" y1="int(y1)" x2="int(x2)" y2="int(y2)"/>
                <!--sample of rows with "\n"-->
                <content>random content
that cross rows</content>
            </cell>
        </region>

        <region id="2" page="int(page_number)">
            <!--cells of region 2, table 1-->
        </region>
    </table>

    <table id="2">
        <!--content of table 2-->
    </table>
</document>